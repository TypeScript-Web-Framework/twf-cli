{
    "compilerOptions": {
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es2015",
        "module": "commonjs",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "es2017"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
